<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#012807"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@drawable/back"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Deer"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Image and Basic Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/deer"
            android:contentDescription="Deer Image"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="About Animal"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Description Section -->

    <!-- Footer Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Deer, sambar, or deer (English: deer) is a regenerative mammal (ruminant) belonging to the family Cervidae.\n\nOne of the hallmarks of deer is the presence of horns instead of antlers, which is a bone growth that develops every year (usually in summer) especially in stags (although there are some exceptions).\n\nStags of almost all species (except water deer), as well as female deer, grow and release new antlers each year.\n\nThere are about 34 species of deer around the world that are divided into two large groups: the old world group of deer which includes the subfamilies Muntiacinae and Cervinae; as well as the new world deer groups, Hydropotinae and Odocoilinae."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

    </LinearLayout>
</LinearLayout>
