<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#012807"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_Back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@drawable/back"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Lion"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Image and Basic Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/lion"
            android:contentDescription="Lion Image"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="About Animal"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Description Section -->

    <!-- Footer Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="The lion (Sanskrit: Siá¹ƒha, or its scientific name Pantheraleo) is a species of animal from the family of felidae or the cat family.\n\nLions are on the African continent and part of in Indian territory.\n\nLions are animals that live in groups. It usually consists of a male and many females.\n\nThis group guards its territory. The lifespan of lions is between 10 and 15 years in the wild, but in captivity it is possible more than 20 years.\n\nThe younger lion will snatch the leadership from the older lion. Most younger lions would eat lion cubs from the previous leader.\n\nLions inhabit grasslands, savannas, and scrublands. It is usually more active in the diurnal than other wild cats, but when it is mistreated, it adapts to be active at night and dusk."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

    </LinearLayout>
</LinearLayout>
